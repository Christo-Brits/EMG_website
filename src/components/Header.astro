---
import { siteConfig } from "../config/site";
import { mainNav } from "../config/nav";
import type { NavItem } from "../config/nav";
import Button from "./ui/Button.astro";

const pathname = new URL(Astro.request.url).pathname;

function isActive(href: string): boolean {
  return pathname === href || pathname === href + "/" || pathname.startsWith(href + "/");
}
---

<header class="sticky top-0 z-50 w-full border-b border-slate-200 bg-white/95 backdrop-blur-sm">
  <div class="container mx-auto flex h-20 items-center justify-between px-4">
    {/* Logotype */}
    <a href="/" class="flex items-center gap-2 flex-shrink-0">
      <span class="font-heading font-bold text-2xl tracking-tighter text-primary">
        ETHYL MERC <span class="text-accent">GROUP</span>
      </span>
    </a>

    {/* Desktop Nav */}
    <nav class="hidden lg:flex items-center gap-1 text-sm font-semibold font-heading">
      {mainNav.map((item: NavItem) => (
        <div class="relative group">
          <a 
            href={item.href} 
            class:list={[
              "px-4 py-2 rounded-md transition-colors hover:text-accent hover:bg-slate-50 uppercase tracking-wide inline-flex items-center gap-1",
              isActive(item.href) ? "text-accent" : "text-slate-600"
            ]}
          >
            {item.title}
            {item.children && (
              <svg class="w-3 h-3 ml-0.5 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            )}
          </a>
          
          {item.children && (
            <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="bg-white rounded-xl shadow-xl border border-slate-200 py-3 min-w-[260px]">
                {item.children.map((child: NavItem) => (
                  <a 
                    href={child.href} 
                    class:list={[
                      "block px-5 py-2.5 text-sm normal-case tracking-normal font-medium transition-colors hover:bg-slate-50 hover:text-accent",
                      isActive(child.href) ? "text-accent bg-slate-50" : "text-slate-600"
                    ]}
                  >
                    {child.title}
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    {/* CTAs */}
    <div class="flex items-center gap-4 flex-shrink-0">
      <div class="hidden md:flex flex-col items-end mr-2">
         <span class="text-xs text-slate-500 font-medium">24/7 Support</span>
         <a href={`tel:${siteConfig.contact.phone}`} class="text-sm font-bold text-primary hover:text-accent font-heading">{siteConfig.contact.phone}</a>
      </div>
      <Button href="/contact?type=quote" size="sm" variant="accent" class="hidden sm:inline-flex">Get a Quote</Button>
      
      {/* Mobile Menu Trigger */}
      <button 
        class="lg:hidden p-2 text-primary" 
        aria-label="Open navigation menu"
        id="mobile-menu-trigger"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
      </button>
    </div>
  </div>
  
  {/* Mobile Navigation */}
  <div id="mobile-menu" class="hidden lg:hidden border-t border-slate-200 bg-white">
    <nav class="container mx-auto px-4 py-4 space-y-1">
      {mainNav.map((item: NavItem) => (
        <div>
          <a href={item.href} class:list={[
            "block px-4 py-3 rounded-lg font-heading font-semibold text-sm uppercase tracking-wide transition-colors",
            isActive(item.href) ? "text-accent bg-accent/5" : "text-slate-700 hover:bg-slate-50"
          ]}>
            {item.title}
          </a>
          {item.children && (
            <div class="ml-4 space-y-0.5 mt-1 mb-2">
              {item.children.map((child: NavItem) => (
                <a href={child.href} class:list={[
                  "block px-4 py-2 text-sm rounded-lg transition-colors normal-case",
                  isActive(child.href) ? "text-accent bg-accent/5" : "text-slate-500 hover:bg-slate-50 hover:text-slate-700"
                ]}>
                  {child.title}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <div class="pt-4 border-t border-slate-100">
        <Button href="/contact?type=quote" variant="accent" class="w-full text-center">Get a Quote</Button>
      </div>
    </nav>
  </div>
</header>

<script>
  const trigger = document.getElementById('mobile-menu-trigger');
  const menu = document.getElementById('mobile-menu');
  if (trigger && menu) {
    trigger.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>

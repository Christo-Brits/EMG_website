---
import { siteConfig } from "../config/site";
---

<footer class="bg-primary text-white pt-16 pb-8 border-t border-slate-800">
  <div class="container mx-auto px-4 grid gap-12 md:grid-cols-2 lg:grid-cols-5">
    {/* Brand */}
    <div class="lg:col-span-2 space-y-4">
      <h3 class="text-2xl font-heading font-bold tracking-tight">ETHYL MERC <span class="text-accent">GROUP</span></h3>
      <p class="text-slate-300 text-sm leading-relaxed max-w-sm">{siteConfig.description}</p>
      <div class="flex gap-4 pt-2">
         <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center hover:bg-accent transition-colors">in</a>
      </div>
    </div>
    
    {/* Services */}
    <div>
      <h4 class="font-heading font-bold mb-6 text-lg tracking-wide">Services</h4>
      <ul class="space-y-2.5 text-sm text-slate-300">
         <li><a href="/services/plumbing" class="hover:text-accent transition-colors">Plumbing & Drainage</a></li>
         <li><a href="/services/electrical" class="hover:text-accent transition-colors">Electrical Services</a></li>
         <li><a href="/services/carpentry" class="hover:text-accent transition-colors">Carpentry & Joinery</a></li>
         <li><a href="/services/painting" class="hover:text-accent transition-colors">Painting & Coatings</a></li>
         <li><a href="/services/hvac" class="hover:text-accent transition-colors">HVAC Systems</a></li>
         <li><a href="/services/civil-works" class="hover:text-accent transition-colors">Civil Works</a></li>
         <li><a href="/services/preventative-maintenance" class="hover:text-accent transition-colors">Preventative Maintenance</a></li>
         <li><a href="/services/emergency-response" class="hover:text-accent transition-colors">Emergency Response</a></li>
      </ul>
    </div>

    {/* Areas & Company */}
    <div>
      <h4 class="font-heading font-bold mb-6 text-lg tracking-wide">Areas We Serve</h4>
      <ul class="space-y-2.5 text-sm text-slate-300 mb-8">
         <li><a href="/areas/auckland" class="hover:text-accent transition-colors">Auckland</a></li>
         <li><a href="/areas/wellington" class="hover:text-accent transition-colors">Wellington</a></li>
         <li><a href="/areas/christchurch" class="hover:text-accent transition-colors">Christchurch</a></li>
      </ul>
      <h4 class="font-heading font-bold mb-4 text-lg tracking-wide">Company</h4>
      <ul class="space-y-2.5 text-sm text-slate-300">
         <li><a href="/about" class="hover:text-accent transition-colors">About Us</a></li>
         <li><a href="/partners" class="hover:text-accent transition-colors">Partner With Us</a></li>
         <li><a href="/contact" class="hover:text-accent transition-colors">Contact</a></li>
      </ul>
    </div>

    {/* Contact + Popular */}
    <div>
      <h4 class="font-heading font-bold mb-6 text-lg tracking-wide">Contact</h4>
      <ul class="space-y-3 text-sm text-slate-300 mb-8">
        <li class="flex gap-3">
           <span class="text-accent font-bold">P:</span> 
           <a href={`tel:${siteConfig.contact.phone}`} class="hover:text-white">{siteConfig.contact.phone}</a>
        </li>
        <li class="flex gap-3">
           <span class="text-accent font-bold">E:</span> 
           <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-white">{siteConfig.contact.email}</a>
        </li>
        <li class="flex gap-3">
           <span class="text-accent font-bold">A:</span> 
           <span>{siteConfig.contact.address}</span>
        </li>
      </ul>
      <h4 class="font-heading font-bold mb-4 text-lg tracking-wide">Popular</h4>
      <ul class="space-y-2.5 text-sm text-slate-300">
         <li><a href="/areas/auckland/plumbing" class="hover:text-accent transition-colors">Plumbing Auckland</a></li>
         <li><a href="/areas/auckland/electrical" class="hover:text-accent transition-colors">Electrical Auckland</a></li>
         <li><a href="/areas/wellington/plumbing" class="hover:text-accent transition-colors">Plumbing Wellington</a></li>
         <li><a href="/areas/christchurch/hvac" class="hover:text-accent transition-colors">HVAC Christchurch</a></li>
      </ul>
    </div>
  </div>
  
  {/* Bottom bar */}
  <div class="container mx-auto px-4 mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4 text-xs text-slate-400">
    <span>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</span>
    <div class="flex gap-6">
      <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
      <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
    </div>
  </div>
</footer>
